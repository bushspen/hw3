<!-- Places details page -->

<h1><%= @place["name"] %></h1>

<h3>Posts</h3>

<ul>
  <% for post in @posts %>
  <li>
    <%= post["title"] %>
    <%= post["description"] %>
  </li>
</ul>

<p>
  <a href="/places/new?place_id=<%= @place["id"] %>">New Post</a>
</p>

<p>
  <a href="/places">Back to All Places</a>
</p>